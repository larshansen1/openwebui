# Base image: Ollama official image
FROM ollama/ollama:latest

# Build argument for embedding model (passed from docker-compose)
ARG EMBEDDING_MODEL=nomic-embed-text

# Install curl for health checks and other utilities
RUN apt-get update && \
    apt-get install -y curl && \
    rm -rf /var/lib/apt/lists/*

# Copy and set up the custom entrypoint script
COPY ollama-entrypoint.sh /usr/local/bin/ollama-entrypoint.sh
RUN chmod +x /usr/local/bin/ollama-entrypoint.sh

# Set the custom entrypoint
ENTRYPOINT ["/usr/local/bin/ollama-entrypoint.sh"]
